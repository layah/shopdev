<!DOCTYPE html>
<html>
  <head>
    <title>会员列表</title>
    <link rel="stylesheet" href="/commont/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/commont/bootstrap-table/css/bootstrap-table.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/home/home.css' />
    <link rel='stylesheet' href='/stylesheets/home/home-list.css' />
  </head>
  <body>
  	<div class="header">
      <span>控制台</span>
      <span class="drodown">退出</span>
    </div>
    <div class="content">
        <%- include ./commont/menu.ejs %>
        <div class="right">
          <div >
              <div class="page-title row">
                  <div class="col-lg-6">
                      <span class="modular "><i></i><em>商品列表</em></span>
                  </div>
                  <div class="col-lg-6">
                      <span class="modular fr"><a href="javascript:;"class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">+添加商品</a></span>
                  </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                    <table id="table-list"></table>
                </div>
              </div>
          </div>
      </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">增加商品</h4>
                </div>
                <div class="modal-body">
                    <div class="wrap">
                        <form id="addform">
                            <table class="list-style" border="0">
                                <tr>
                                    <td style="text-align:right;width:15%;"><span>产品名称：</span></td>
                                    <td><input name="name" type="text" class="textBox length-long"/></td>
                                </tr>
                                <tr>
                                    <td style="text-align:right;"><span>市场价：</span></td>
                                    <td>
                                        <input name="price" type="text" class="textBox length-short"/>
                                        <span>元</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:right;"><span>库存：</span></td>
                                    <td>
                                        <input name="stock" type="text" class="textBox length-short"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:right;"><span>产品主图：</span></td>
                                    <td>
                                        <input value="1" name="imgPath" type="file"  multiple id="chanpinzhutu" class="hide"/>
                                        <label for="chanpinzhutu" class="labelBtn2">本地上传(最多选择5张)</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:right;"><span>图片预览：</span></td>
                                    <td id="img-group">

                                    </td>
                                </tr>

                                <tr>
                                    <td style="text-align:right;"><span>产品描述：</span></td>
                                    <td><textarea name="describes" rows="6" cols="66" class="textarea" maxlength="100" placeholder="输入描述100字"></textarea></td>
                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" id="uploadSure">确定</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
  </body>
  <%- include ./commont/script.ejs %>
  <script type="text/javascript" src="/js/home/home.js"></script>
  <script>
      $(function() {
          $('#myModal').modal('hide')
      });
  </script>
</html>
